import random
def craps():
  roll = raw_input("Hit ENTER to roll...")
  if roll == roll:
    game = 'lose'
    die1 = random.randint(1,6)
    die2 = random.randint(1,6)
    val = die1 + die2
    print "You rolled", die1, "+", die2, " which is", val
    while game == 'lose':
     if val == 7 or val == 11:
       game = 'win'
       print "you win"
     else:
       game = 'lose'
       print "you lose"
       craps()
       break
        
