import random
def craps():
 roll = raw_input("Hit ENTER to roll...")
 if roll == roll:
   game = 'lose'
   die1 = random.randint(1,6)
   die2 = random.randint(1,6)
   val = die1 + die2
   print "You rolled", die1, "+", die2, " which is", val
   while game == 'lose':
    if val == 7 or val == 11:
      game = 'win'
      print "you win"
      break
    if val == 7 or val == 11 and first == 7:
      game = 'lose'
      print "you crapped out"
      break
    if val in (2,3,12):
      game = "lose"
      print "you lose"
      break
    if val in (4,5,6,8,9,10):
      print "try again"
      first = 1
      craps()
      break
    if val in (4,5,6,8,9,10) and first == 1:
      print "you win, made your point"
      break


